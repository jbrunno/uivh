{
  "name": "@vhsys-ui/use-infinite-scroll",
  "version": "0.0.64",
  "description": "A hook for handling infinite scroll based on the IntersectionObserver API",
  "keywords": [
    "use-infinite-scroll"
  ],

  "homepage": "https://vhsys.com.br",

  "main": "src/index.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],

  "repository": {
    "type": "git",
    "url": "git@git.vhsys.com.br:front/frontend-core.git",
    "directory": "packages/hooks/use-infinite-scroll"
  },

  "scripts": {
    "build": "tsup src --dts",
    "build:fast": "tsup src",
    "dev": "pnpm build:fast --watch",
    "clean": "rimraf dist .turbo",
    "typecheck": "tsc --noEmit",
    "prepack": "clean-package",
    "postpack": "clean-package restore"
  },
  "dependencies": {
    "lodash.debounce": "^4.0.8",
    "@types/lodash.debounce": "^4.0.7"
  },
  "peerDependencies": {
    "react": ">=18"
  },
  "devDependencies": {
    "clean-package": "2.2.0",
    "react": "^18.0.0"
  },
  "clean-package": "../../../clean-package.config.json",
  "tsup": {
    "clean": true,
    "target": "es2019",
    "format": [
      "cjs",
      "esm"
    ]
  }
}
